<UserControl x:Class="VkMirea.CustomControls.Block"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VkMirea.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="200"
             x:Name="BlockElement">
    <Border BorderThickness="2" BorderBrush="CadetBlue" Margin="15,15,0,0" MouseLeftButtonUp="Grid_OnMouseLeftButtonUp">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="2px"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" 
                   Margin="10"
                   Source="{Binding Path=ImageSource, ElementName=BlockElement}" 
                   MaxHeight="100"
                   MaxWidth="100" 
                   Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" />
            <Rectangle Grid.Row="1" Fill="CadetBlue"/>
            <Label Grid.Row="2" 
                   Content="{Binding Path=TitleName, ElementName=BlockElement}" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
        </Grid>
    </Border>
</UserControl>