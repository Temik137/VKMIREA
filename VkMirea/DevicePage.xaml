<Page x:Class="VkMirea.DevicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:VkMirea"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DevicePage"
      x:Name="DevicePageElement"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="5*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="{Binding Path=DeviceName, ElementName=DevicePageElement}" HorizontalAlignment="Center"
               VerticalAlignment="Center" />
        <Image Grid.Row="1" Source="{Binding Path=DeviceImagePath, ElementName=DevicePageElement}"/>
    </Grid>
</Page>